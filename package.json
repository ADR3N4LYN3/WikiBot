{
  "name": "wikibot",
  "version": "0.1.0",
  "private": true,
  "description": "Discord bot with collaborative knowledge base and AI search",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @wikibot/database prisma migrate dev",
    "db:push": "pnpm --filter @wikibot/database prisma db push",
    "db:studio": "pnpm --filter @wikibot/database prisma studio",
    "db:seed": "pnpm --filter @wikibot/database prisma db seed"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
