# Database
DATABASE_URL="postgresql://user:password@localhost:5432/wikibot"

# Discord
DISCORD_CLIENT_ID="your_discord_client_id"
DISCORD_CLIENT_SECRET="your_discord_client_secret"
DISCORD_BOT_TOKEN="your_discord_bot_token"
DISCORD_PUBLIC_KEY="your_discord_public_key"

# OpenAI
OPENAI_API_KEY="sk-..."

# Pinecone (Vector Database for AI Search)
PINECONE_API_KEY="your_pinecone_api_key"
PINECONE_ENVIRONMENT="us-west1-gcp"
PINECONE_INDEX_NAME="wikibot-articles"

# Redis
REDIS_URL="redis://localhost:6379"

# S3/R2 Storage (for file uploads)
# For Cloudflare R2: https://<account_id>.r2.cloudflarestorage.com
S3_ENDPOINT="https://your-account.r2.cloudflarestorage.com"
S3_BUCKET="wikibot-uploads"
S3_REGION="auto"
S3_ACCESS_KEY_ID="your_access_key"
S3_SECRET_ACCESS_KEY="your_secret_key"
S3_PUBLIC_URL="https://cdn.yourdomain.com"

# NextAuth (Dashboard Authentication)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate_with_openssl_rand_base64_32"

# Stripe (Premium Features)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PREMIUM_PRICE_ID="price_..."
STRIPE_PRO_PRICE_ID="price_..."

# Monitoring (Optional)
SENTRY_DSN="https://..."
PLAUSIBLE_DOMAIN="wikibot.io"

# API Configuration
API_PORT=4000
API_URL="http://localhost:4000"

# Bot-to-API Authentication (required in production)
BOT_API_SECRET="generate_with_openssl_rand_base64_32"

# Dashboard (Client-side)
NEXT_PUBLIC_API_URL="http://localhost:4000"
DASHBOARD_URL="http://localhost:3000"
